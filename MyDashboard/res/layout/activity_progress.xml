<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WheelProgressActivity" >

    <TextView
        android:id="@+id/date_saved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WheelOuterBackgroundColor"
        android:padding="5dp"
        android:textColor="@color/TextColor"
        android:textStyle="bold"
        android:textSize="18sp" />

    <com.berries.dashboard.views.WheelGroupView
        android:id="@+id/wheel_progress_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:padding="1dp" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/empty_list_info"
        android:textSize="18sp" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

</LinearLayout>